extends layout

block content
  div.container
    br
    div.signin-title.text-center
      h4 
        strong 로그인

    div.signin-form
      form(action='/signin', method='POST')
        div.form-group
          label(for='id') 아이디
          input.form-control(type='text', id='id', name='id', placeholder='아이디', required, autofocus)        
        div.form-group
          label(for='password') 비밀번호
          input.form-control(type='password', id='password', name='password', placeholder='비밀번호', required, autofocus)
        
        br
        div.signin-button
          button.btn.btn-primary(type="submit") SIGNIN