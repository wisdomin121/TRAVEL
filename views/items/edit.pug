extends ../layout

block content
  div.container
    br
    div.registration-title.text-center
      h4 
        strong 상품등록창

    div.registration-form
      form.form-horizontal(action=`/items/${item.id}/edit`, method="POST")
        div.form-group.form-inline
          label.col-sm-2.control-label(for="title") 제목
          div.col-sm-10
            input.form-control(type="text", id="title", name="title" value=item.title)
        div.form-group.form-inline
          label.col-sm-2.control-label(for="price") 1인당 가격
          div.col-sm-10
            input.form-control(type="text", id="price", name="price" value=item.price)
        div.form-group.form-inline
          label.col-sm-2.control-label(for="max_num") 최대인원
          div.col-sm-10
            input.form-control(type="text", id="max-num", name="max_num" value=item.max_num)
        div.form-group.form-inline
          label.col-sm-2.control-label(for="i_info") 상품정보글
          div.col-sm-10
            textarea.form-control.ta(id="i_info", name="i_info") #{item.i_info}

        - var len = item.c_info.length;
        - var n = 0;
        while n < len
          div.form-group.form-inline
            label.col-sm-2.control-label(for="c_info") #{n+1}일차
            div.col-sm-10 
              textarea.form-control.ta(id="c_info", name="c_info") #{item.c_info[n]}
          - n++
        
        br
        div.registration-btn
          button.btn.btn-primary(type="submit")
            strong 등록하기
          a.btn.btn-primary(href=`/items/${item.id}?_method=DELETE`)
            strong 삭제하기