extends ../layout

block content
  .container.item-show
    br
    .show-title
      h3.text-center 
        strong #{item.title}

    p.price #{item.price}원
    p.max_num 최대인원 : #{item.max_num}
    p.guide 가이드: #{item.guide.name}
    p.p_date 등록일자: #{item.p_date}

    hr
    p.i_info.text-center #{item.i_info}
    ul
      each val, index in item.c_info
        li= (index+1) + '일차: ' + val

    hr

    h5.item-review 
      strong 고객 리뷰

  nav.navbar.fixed-bottom.navbar-expand-sm
    if(item.guide.group == 1)
      a.btn.btn-primary.btn-lg.btn-block.reserve-btn(href="#") 예약하기
    else
      a.btn.btn-primary.btn-lg.btn-block.registration-edit-btn(href=`/items/${item.id}/edit`) 수정하기
   
